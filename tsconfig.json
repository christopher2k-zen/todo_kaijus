{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": [ "es5", "es6", "es2015.promise", "dom" ],
    "baseUrl": ".",
    "paths": { "*": [ "src/*" ] },
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typing"
    ]
  },
  "include": [
    "typing/**/*",
    "src/**/*"
  ]
}
